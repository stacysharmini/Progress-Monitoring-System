@page
@model Progress_Monitoring_System.Pages.Login.IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!-- Add Bootstrap CSS for better styling -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Progress_Monitoring_System.styles.css" asp-append-version="true" />

<style>
    body {
        background: linear-gradient(to right, #00a5cf, #004e64);
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .login-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 100%;
        max-width: 400px;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #353535;
        }

        .login-card p {
            text-align: center;
            margin-bottom: 10px;
            color: darkgray;
        }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 15px;
        font-size: 16px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        color:white;
        background-color: #00a5cf
    }

    .btn-primary:hover {
        
        color: white;
            background-color: #00a5c0
    }
    .alert {
        margin-top: 20px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .forgot-password {
        display: block;
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
    }

        .forgot-password a {
            text-decoration: none;
            color: #004e64;
        }

            .forgot-password a:hover {
                text-decoration: underline;
                color: #004e60;
            }
</style>

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>
        <p>
            Acceptance Testing Management and
            Progress Monitoring System
        </p>

        <form method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="Username" asp-for="LoginModel.Username" required />
                <span asp-validation-for="LoginModel.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="Password" asp-for="LoginModel.Password" required />
                <span class="text-danger" asp-validation-for="LoginModel.Password"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

            <!-- Forgot password link -->
           @*  <div class="forgot-password">
                <a href="#">Forgot your password?</a>
            </div> *@
        </form>

        <!-- Feedback messages -->
        @if (Model.LoginFailed)
        {
            <div class="alert alert-danger mt-3">
                Invalid username or password. Please try again.
            </div>
        }
       
    </div>
</div>
